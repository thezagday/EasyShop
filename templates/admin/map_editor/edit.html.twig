{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Map Editor - {{ shop.title }}{% endblock %}

{% block content_title %}
    <h1>
        <i class="fa fa-map"></i> Map Editor: {{ shop.title }}
    </h1>
{% endblock %}

{% block main %}
    <div class="card">
        <div class="card-body">
            <div id="obstacle-editor-root" 
                 data-shop-id="{{ shop.id }}"
                 data-map-url="{{ mapImageUrl }}"
                 data-map-width="{{ mapWidth }}"
                 data-map-height="{{ mapHeight }}">
                <div style="text-align: center; padding: 40px;">
                    <i class="fa fa-spinner fa-spin fa-3x"></i>
                    <p>Loading map editor...</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('admin') }}" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Back to Shops
        </a>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin-map-editor') }}
{% endblock %}

{% block body_stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin-map-editor') }}
{% endblock %}
